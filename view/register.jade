extends ./navBar.jade
block title
  title 注册页面
block css
  script(src="/jspm_packages/system.js")
  script(src="/config.js")
  link(rel="styleSheet" type="text/css" href="/style/register.css")
  script.
    System.import('js/register')
    System.import('js/cart')
block content
  .ui.grid.centered
    .eight.wide.column
      .ui.form.segment
        .ui.header#registerHeader 欢迎注册我的LetUsGo
        .field
          input(placeholder="用户名" type="text")
        .field
          input(placeholder="密码" type="password")
        .field
          input(placeholder="重复密码" type="password")
        .field
          input(placeholder="手机" type="password")
        .field
          input(placeholder="地址" type="password")
        .field
          input(placeholder="邮箱" type="password")
        .field#buttonField
          .ui.positive.button 重置
          .ui.negative.button 提交

